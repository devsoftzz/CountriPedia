<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devsoft.countryapi_recyclersearch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="CountriPedia"
        android:roundIcon="@drawable/round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.devsoft.countryapi_recyclersearch.info" android:screenOrientation="portrait"></activity>
        <activity android:name="com.devsoft.countryapi_recyclersearch.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>